<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/head-createProduct")%>
    <title>Edicion de un producto</title>
</head>

<body>
  <!-- encabezado de la pagina -->
  <%- include("../partials/header")%>

    <section>
      <div class="imgbox">
        <img src="/imagenes/<%=event.banner%>" alt="" />
      </div>

      <div class="contentbx">
        <div class="formbx">
          <form class="forms" method="POST" action="/Evento/?_method=PUT">
            <div class="inputbx">
              <label for="">Nombre del evento: </label>
              <input type="text" value="<%=event.nombre%>" name="nombre" required />
            </div>
            <div class="inputbx">
              <label for="">imagene del evento: </label>
              <input type="file" name="banner" />
            </div>

            <div class="inputbx caja-options">
              <select class="selectores" name="provincia" id="provincia" required>
                <option value="<%=event.provincia%>">Provincia</option>
                <option value="1">Buenos Aires</option>
                <option value="2">Capital Federal</option>
                <option value="3">Catamarca</option>
                <option value="4">Chaco</option>
                <option value="5">Chubut</option>
                <option value="6">Córdoba</option>
                <option value="7">Corrientes</option>
                <option value="8">Entre Ríos</option>
                <option value="9">Formosa</option>
                <option value="10">Jujuy</option>
                <option value="11">La Pampa</option>
                <option value="12">La Rioja</option>
                <option value="13">Mendoza</option>
                <option value="14">Misiones</option>
                <option value="15">Neuquén</option>
                <option value="16">Río Negro</option>
                <option value="17">Salta</option>
                <option value="18">San Juan</option>
                <option value="19">San Luis</option>
                <option value="20">Santa Cruz</option>
                <option value="21">Santa Fé</option>
                <option value="22">Santiago del Estero</option>
                <option value="23">Tierra del Fuego</option>
                <option value="24">Tucumán</option>
              </select>
            </div>
            <div class="inputbx">
              <label for="">Localidad del evento: </label>
              <input type="text" placeholder="Localidad" name="localidad" value="<%=event.localidad%>" required />
            </div>

            <div class="inputbx">
              <label for="">Direccion del evento: </label>
              <input type="text" value="<%=event.direccion%>" required name="direccion" />
            </div>

            <div class="inputbx">
              <label for="">Fecha del evento: </label>
              <input type="date" value="<%=event.fecha%>" name="fecha" required />
            </div>

            <div class="inputbx">
              <label for="">Hora de inicio: </label>
              <input type="time" value="<%=event.horaI%>" name="horaI" required />
            </div>
            <div class="inputbx">
              <label for="">Hora de finalizacion: </label>
              <input type="time" placeholder="Hora de finalizacion" value="<%=event.horaF%>" name="horaF" required />
            </div>

            <div class="inputbx">
              <label for="">Precio de entradas: </label>
              <input type="text" value="<%=event.precio%>" name="precio" required />
            </div>

            <div class="inputbx">
              <label for="">Descripcion del evento: </label>
              <textarea name="descripcion" required class="inputbx">
<%= event.descripcion %>
              </textarea>
            </div>

            <div class="inputbx">
              <label for="">Mas informacion: </label>
              <input type="text" value="<%= event.masInformacion %>" name="mas-informacion" required />
            </div>

            <div class="inputbx">
              <a href="#" class="botones-edicion">
                <input type="submit" value="Guardar" name="" />
              </a>
            </div>
            <div class="inputbx">
              <a href="#" class="botones-edicion">
                <input type="submit" value="Eliminar Evento" name="" />
              </a>
            </div>
          </form>
        </div>
      </div>
    </section>

    <!-- pie de pagina -->
    <%- include("../partials/footer")%>
</body>

</html>