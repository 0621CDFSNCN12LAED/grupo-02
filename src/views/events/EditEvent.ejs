<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/head-createProduct")%>
    <title>Edicion de un producto</title>
</head>

<body>
  <!-- encabezado de la pagina -->
  <%- include("../partials/header")%>

    <section>
      <div class="imgbox">
        <img src="/imagenes/Eventos/<%=event.banner%>" alt="" />
      </div>

      <div class="contentbx">
        <div class="formbx">
          <form class="forms" action="/Evento/<%= event.id %>?_method=PUT" method="POST" enctype=multipart/form-data>
            <div class="inputbx">
              <label for="">Nombre del evento: </label>
              <input type="text" value="<%=event.event_name%>" name="event_name" required />
            </div>
            <div class="inputbx">
              <label for="">imagene del evento: </label>
              <input type="file" name="banner" />
            </div>
            <!-- mirar lineas ERROR-->
            <div class="inputbx caja-options">
              <select class="selectores" name="idProvince" id="idProvince">
                <option value="">Provincia</option>

                <% for (province of provinces){ %>
                  <option value="<%=province.id%>">
                    <%= province.province %>
                  </option>
                  <% } %>
              </select>
            </div>

            <div class="inputbx caja-options">
              <select class="selectores" name="idLocation" id="idLocation">
                <option value="">localidades</option>

                <% for (location of locations){ %>
                  <option value="<%=location.id%>">
                    <%= location.locations %>
                  </option>
                  <% } %>

              </select>
            </div>

            <div class="inputbx">
              <label for="">Direccion del evento: </label>
              <input type="text" value="<%=event.event_address%>" required name="event_address" />
            </div>

            <div class="inputbx">
              <label for="">Fecha del evento: </label>
              <input type="date" value="<%=event.event_date%>" name="event_date" required />
            </div>

            <div class="inputbx">
              <label for="">Hora de inicio: </label>
              <input type="time" value="<%=event.start_time%>" name="start_time" required />
            </div>
            <div class="inputbx">
              <label for="">Hora de finalizacion: </label>
              <input type="time" placeholder="Hora de finalizacion" value="<%=event.end_time%>" name="end_time"
                required />
            </div>

            <div class="inputbx">
              <label for="">Precio de entrada: </label>
              <input type="text" id="precio" name="price" value="<%=event.price%>" required />
            </div>

            <div class="inputbx">
              <label for="">Descripcion del evento: </label>
              <textarea name="event_description" required class="inputbx">
<%= event.event_description %>
              </textarea>
            </div>

            <div class="inputbx">
              <label for="">Mas informacion: </label>
              <input type="text" value="<%= event.more_info %>" name="more_info" required />
            </div>

            <div class="inputbx">
              <input type="submit" value="Guardar" />
            </div>
          </form>
          <div class="inputbx">
            <form class="forms" action="/Evento/<%= event.id %>?_method=DELETE" method="POST"
              enctype=multipart/form-data>
              <input type="submit" value="Eliminar Evento" />
          </div>
          </form>
        </div>
      </div>
    </section>

    <!-- pie de pagina -->
    <%- include("../partials/footer")%>
</body>

</html>