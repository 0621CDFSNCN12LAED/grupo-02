            <div class="inputbx caja-options">
              <select class="selectores" name="idLocations" id="idLocations">
                <option
                  value="<%= locals.oldData ? oldData.locations : null %>"
                >
                  Localidad
                </option>
                <!-- Aplicar el For -->
                <% for (location of locations){ %>
                <option value="<%=location.id%>">
                  <%= location.locations %>
                </option>
                <% } %>
              </select>
            </div>

            <!-- <div class="inputbx">
              <input
                type="text"
                placeholder="Localidad"
                name="location"
                value="%= locals.oldData ? oldData.location : null %>"
              />
              % if (locals.errors && errors.location) { %>
              <div class="error-msg">%= errors.location.msg %></div>
              % } %>
