<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Fonts-->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- links para iconos  -->
  <script src="https://kit.fontawesome.com/dbca3ea2a9.js" crossorigin="anonymous"></script>

  <!-- hoja de estilos -->

  <link rel="stylesheet" href="/css/normalize.css" />
  <link rel="stylesheet" href="/css/utils.css" />
  <link rel="stylesheet" href="/css/theme.css" />
  <link rel="stylesheet" href="/css/style.css" />

  <link rel="stylesheet" href="/css/styles-sm.css" media="(min-width:480px)" />
  <link rel="stylesheet" href="/css/styles-md.css" media="(min-width:768px)" />

  <title>Deporteando</title>
</head>
<body>
    <!-- encabezado de la pagina -->
    <header class="h-contenedor-header t-grey-bg">
      <div class="display-flex space-between item-center">
        <div class="h-contenedor-logo"><a href="/">
          <img class="logo" src="./imagenes/deporteandoLogo.png" alt="logo" /></a>
        </div>
         <div class="h-icon-design display-none-sm">
          <i class="fas fa-bars"></i>
        </div>
        <div class="h-content-nav-sm">
        <nav class="display-none display-flex-sm navbar-sm">
          <ul>
            <li>
              <a href="/Registro"
                >Registrate</a>
            </li>
            <li>
              <a href="/Login">Inicias sesión</a>
            </li>
            <li>
              <a href="/Carrito"
                >Mi Carrito</a>
            </li>
            <li>
              <a href="/Carrito" class="boton-menu">CREAR EVENTO</a>
            </li>
          </ul>
        </nav>
      </div>  
    </header>

  <!-- carrusel de la pagina -->

  <section class="s-gris">
    <article class="art-banner-style">
      <img src="/imagenes/imagen-fondo-usuario-2.jpg" alt="banner" class="banner" />
    </article>
  </section>
    <!-- productos de la pagina -->

    <div class="B-categoria">
      <form action="bucarX" class="buscador2">
      <input type="text" name="filtroTexto" placeholder="Buscar un evento en Deporteando">
      <select name="provincia" id="provincia">
        <option value="">Por Provincia</option>
        <option value="1">Buenos Aires</option>
        <option value="2">Capital Federal</option>
        <option value="3">Catamarca</option>
        <option value="4">Chaco</option>
        <option value="5">Chubut</option>
        <option value="6">Córdoba</option>
        <option value="7">Corrientes</option>
        <option value="8">Entre Ríos</option>
        <option value="9">Formosa</option>
        <option value="10">Jujuy</option>
        <option value="11">La Pampa</option>
        <option value="12">La Rioja</option>
        <option value="13">Mendoza</option>
        <option value="14">Misiones</option>
        <option value="15">Neuquén</option>
        <option value="16">Río Negro</option>
        <option value="17">Salta</option>
        <option value="18">San Juan</option>
        <option value="19">San Luis</option>
        <option value="20">Santa Cruz</option>
        <option value="21">Santa Fé</option>
        <option value="22">Santiago del Estero</option>
        <option value="23">Tierra del Fuego</option>
        <option value="24">Tucumán</option>
      </select>
      <select name="mes" id="mes">
        <option value="">Por Mes.</option>
        <option value="2021-08-01 00:00:00">Ago de 2021</option>
        <option value="2021-09-01 00:00:00">Sep de 2021</option>
        <option value="2021-10-01 00:00:00">Oct de 2021</option>
        <option value="2021-11-01 00:00:00">Nov de 2021</option>
        <option value="2021-12-01 00:00:00">Dic de 2021</option>
        <option value="2022-01-01 00:00:00">Ene de 2022</option>
        <option value="2022-02-01 00:00:00">Feb de 2022</option>
        <option value="2022-03-01 00:00:00">Mar de 2022</option>
        <option value="2022-04-01 00:00:00">Abr de 2022</option>
        <option value="2022-05-01 00:00:00">May de 2022</option>
        <option value="2022-06-01 00:00:00">Jun de 2022</option>
        <option value="2022-07-01 00:00:00">Jul de 2022</option>
      </select>
      <button class="categori-buttom" type="submit">BUSCAR</button>
      </form>
    </div>
    
    <main>
      <section class="B-muestra-ticket display-flex">
        <div class="product-wrapper">
          <article class="product">
            <img class="product-img" src="<%= variable.img %>" alt="" width="100%" />

            <div class="product-content">
              <h3>Cross Country</h3>
              <p>Sierras de Cordoba (17/11/21)</p>
              <button class="m-botton-compra"><a href="#"><i class="fas fa-ticket-alt ticket"></i>Comprar</a></button>
            </div>
          </article>
        </div>

        <div class="product-wrapper">
          <article class="product">
            <img class="product-img" src="./imagenes/evento6.jpg" alt="" width="100%" />

            <div class="product-content">
              <h3>Sport Pista</h3>
              <p>Rosario (04/09/21)</p>
              <button class="m-botton-compra"><a href="#"><i class="fas fa-ticket-alt ticket"></i>Comprar</a></button>
            </div>
          </article>
        </div>

        <div class="product-wrapper">
          <article class="product">
            <img class="product-img" src="./imagenes/evento3.jpg" alt="" width="100%" />

            <div class="product-content">
              <h3>Montain Country</h3>
              <p>Mendoza (20/11/21)</p>
              <button class="m-botton-compra"><a href="#"><i class="fas fa-ticket-alt ticket"></i>Comprar</a></button>
            </div>
          </article>
        </div>
        <div class="product-wrapper">
          <article class="product">
            <img class="product-img" src="./imagenes/evento5.jpg" alt="" width="100%" />

            <div class="product-content">
              <h3>Cross Country</h3>
              <p>Sierras de Cordoba (17/11/21)</p>
              <button class="m-botton-compra"><a href="#"><i class="fas fa-ticket-alt ticket"></i>Comprar</a></button>
            </div>
          </article>
        </div>
      </section>
    </main>

    <!-- pie de pagina -->

    <footer class="f-footer t-grey-bg">

      <div class="f-primero">
        <h3 class="f-titulo">Mas informacion</h3>
        <p class="f-info"><a class="f-links" href="#">Quienes somos</a></p>
        <p class="f-info"><a class="f-links" href="#">¿Por que elegirnos?</a></p>
        <p class="f-info"><a class="f-links" href="#">Preguntas frecuentes</a></p>
        <p class="f-info"><a class="f-links" href="#">Terminos y condiciones</a></p>
        <p class="f-100"><a class="f-links" href="#">Politicas de privacidad</a></p>
      </div>

      <div class="f-cuarto">
        <h3 class="f-titulo">Contactanos</h3>
        <p class="f-contacto">
          <i><a class="f-links" href="">Formulario de contacto</a></i>
        </p>
        <p class="f-contacto">
          <i><a class="f-links" href="">Contactanos via whatssap</a></i>
        </p>
        <p class="f-100">
          <i><a class="f-links" href="">contacto@deporteando.com</a></i>
        </p>
      </div>

      <div class="f-segundo">
        <i><a href="#" class="fa fa-facebook"></a></i>
        <i><a href="#" class="fa fa-twitter"></a></i>
      </div>

      <div class="f-tercero">
        <p class="f-copy">Copyrigth@deporteando</p>
      </div>

    </footer>
</body>

</html>